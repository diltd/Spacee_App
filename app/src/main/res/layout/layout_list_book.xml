<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="200dp"
	android:background="@color/light_grey_white"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/thumbnail"
		android:layout_width="0dip"
		android:layout_weight="340"
		android:layout_height="match_parent"
		android:layout_margin="10dp"
		android:background="@drawable/img_area" />

	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="180"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_list_book_checkin"
			android:textColor="@color/spacee_blue"
			android:textSize="18sp"
			android:gravity="center_vertical" />

		<TextView
			android:id="@+id/dateBegin"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="40"
			android:text=""
			android:textColor="@color/text_black"
			android:textSize="22sp"
			android:gravity="center_vertical" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_list_book_checkout"
			android:textColor="@color/spacee_blue"
			android:textSize="18sp"
			android:gravity="center_vertical" />

		<TextView
			android:id="@+id/dateEnd"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="40"
			android:text=""
			android:textColor="@color/text_black"
			android:textSize="22sp"
			android:gravity="center_vertical" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30" />
	</LinearLayout>


	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="180"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30" />

		<TextView
			android:id="@+id/timeBegin"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="70"
			android:text="15:00"
			android:textColor="@color/text_black"
			android:textSize="40sp"
			android:gravity="center_vertical" />

		<ImageView
			android:layout_width="60dip"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:scaleType="fitStart"
			android:background="@drawable/ic_arwbottom" />

		<TextView
			android:id="@+id/timeEnd"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="70"
			android:text="16:00"
			android:textColor="@color/text_black"
			android:textSize="40sp"
			android:gravity="center_vertical" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="460"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="80"
			android:orientation="horizontal" >

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="140"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="10" />

				<TextView
					android:id="@+id/status1"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="@string/xml_list_book_status"
					android:textColor="@color/text_white"
					android:textSize="18sp"
					android:gravity="center"
					android:background="@xml/shape_oval2" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="10" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="20"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/status2"
				android:layout_width="0dip"
				android:layout_weight="300"
				android:layout_height="match_parent"
				android:text=""
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center_vertical" />
		</LinearLayout>

		<TextView
			android:id="@+id/placeName"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="120"
			android:text=""
			android:textColor="@color/text_black"
			android:textSize="30sp"
			android:gravity="center_vertical" />

		<TextView
			android:id="@+id/info1"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="140"
			android:text=""
			android:textColor="@color/text_black"
			android:textSize="16sp"
			android:maxLines="3" />

		<TextView
			android:id="@+id/info2"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="140"
			android:text=""
			android:textColor="@color/sub"
			android:textSize="16sp"
			android:maxLines="3" />
	</LinearLayout>
</LinearLayout>