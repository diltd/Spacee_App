<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentAppMain"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/light_grey_white"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="200"
			android:text="@string/xml_account_link_msg"
			android:textColor="@color/spacee_blue"
			android:textSize="28sp"
			android:gravity="center" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="300"
			android:orientation="horizontal" >

			<View
				android:layout_width="0dip"
				android:layout_weight="275"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="730"
				android:layout_height="match_parent"
				android:background="@drawable/ic_large_cooperation_disabled"
				android:scaleType="fitXY"
				android:orientation="horizontal" >

				<View
					android:layout_width="0dip"
					android:layout_weight="60"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="0dip"
					android:layout_weight="180"
					android:layout_height="match_parent"
					android:orientation="vertical" >

					<View
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="60" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="130"
						android:orientation="horizontal" >

						<View
							android:layout_width="0dip"
							android:layout_weight="25"
							android:layout_height="match_parent" />

						<ImageView
							android:layout_width="0dip"
							android:layout_weight="130"
							android:layout_height="match_parent"
							android:background="@drawable/ic_middle_card"
							android:scaleType="fitXY"
							android:layout_gravity="center" />

						<View
							android:layout_width="0dip"
							android:layout_weight="25"
							android:layout_height="match_parent" />
					</LinearLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="40"
						android:text="@string/xml_account_link_ic"
						android:textColor="@color/text_black"
						android:textSize="20sp"
						android:gravity="center" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="70"
						android:text="@string/xml_account_link_ic_info"
						android:textColor="@color/sub"
						android:textSize="18sp"
						android:gravity="center_horizontal" />
				</LinearLayout>

				<View
					android:layout_width="0dip"
					android:layout_weight="250"
					android:layout_height="match_parent" />

				<LinearLayout
					android:layout_width="0dip"
					android:layout_weight="180"
					android:layout_height="match_parent"
					android:orientation="vertical" >

					<View
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="60" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="130"
						android:orientation="horizontal" >

						<View
							android:layout_width="0dip"
							android:layout_weight="25"
							android:layout_height="match_parent" />

						<ImageView
							android:layout_width="0dip"
							android:layout_weight="130"
							android:layout_height="match_parent"
							android:background="@drawable/ic_middle_spacee"
							android:scaleType="fitXY"
							android:layout_gravity="center" />

						<View
							android:layout_width="0dip"
							android:layout_weight="25"
							android:layout_height="match_parent" />
					</LinearLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="40"
						android:text="@string/xml_account_link_user_name"
						android:textColor="@color/text_black"
						android:textSize="20sp"
						android:gravity="center" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="0dip"
						android:layout_weight="70"
						android:text="@string/xml_account_link_account"
						android:textColor="@color/sub"
						android:textSize="16sp"
						android:gravity="center_horizontal" />
				</LinearLayout>

				<View
					android:layout_width="0dip"
					android:layout_weight="60"
					android:layout_height="match_parent" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="275"
				android:layout_height="match_parent" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="100" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="80" >

			<View
				android:layout_width="0dip"
				android:layout_weight="310"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/btnCancel"
				android:layout_width="0dip"
				android:layout_weight="210"
				android:layout_height="match_parent"
				android:text="@string/xml_account_link_btn_cancel"
				android:textColor="@color/text_black"
				android:textSize="20sp"
				android:gravity="center"
				android:background="@xml/shape_button_white" />

			<View
				android:layout_width="0dip"
				android:layout_weight="30"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/btnDoLink"
				android:layout_width="0dip"
				android:layout_weight="420"
				android:layout_height="match_parent"
				android:text="@string/xml_account_link_btn_link"
				android:textColor="@color/text_white"
				android:textSize="20sp"
				android:gravity="center"
				android:background="@xml/shape_button_lime" />

			<View
				android:layout_width="0dip"
				android:layout_weight="310"
				android:layout_height="match_parent" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="60" />
	</LinearLayout>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>
