<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentMeetingList"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/light_grey_white"
		android:orientation="horizontal">

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />

		<LinearLayout
			android:layout_width="0dip"
			android:layout_weight="1160"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="50" />

			<ListView
				android:id="@+id/meetingRooms"
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="690"
				android:divider="@drawable/divider" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />
	</LinearLayout>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>