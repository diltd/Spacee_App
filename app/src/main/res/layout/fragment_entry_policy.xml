<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentEntryPolicy"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/light_grey_white"
		android:orientation="horizontal">

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />

		<LinearLayout
			android:layout_width="0dip"
			android:layout_weight="700"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="40" />

			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="700" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="100"
			android:layout_height="match_parent" />

		<LinearLayout
			android:layout_width="0dip"
			android:layout_weight="360"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="500" />

			<LinearLayout
				android:id="@+id/layoutAgree"
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60"
				android:orientation="horizontal" >

				<ImageView
					android:id="@+id/chkboxAgree"
					android:layout_width="0dip"
					android:layout_weight="60"
					android:layout_height="match_parent"
					android:background="@drawable/ic_middle_checkbox" />

				<TextView
					android:layout_width="0dip"
					android:layout_weight="300"
					android:layout_height="match_parent"
					android:text="利用規約に同意する"
					android:textColor="@color/text_black"
					android:textSize="20sp"
					android:gravity="center_vertical"
					android:paddingLeft="10sp" />
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="40" />

			<TextView
				android:id="@+id/btnAgree"
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="80"
				android:text="スペイシ―に登録"
				android:textColor="@color/text_white"
				android:textSize="24sp"
				android:gravity="center"
				android:background="@drawable/shape_button_gray" />

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />
	</LinearLayout>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>
