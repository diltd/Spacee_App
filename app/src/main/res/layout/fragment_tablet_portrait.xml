<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentCheckBooking"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/light_grey_white"
	android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="50" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="110"
		android:text="ログイン方法を選択してください"
		android:textSize="28sp"
		android:textColor="@color/spacee_blue"
		android:gravity="center" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="360"
		android:orientation="horizontal" >

		<View
			android:layout_width="0dip"
			android:layout_weight="95"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginIC"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:orientation="horizontal" >

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />

				<ImageView
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="180"
					android:background="@drawable/ic_middle_cardread"
					android:scaleType="fitCenter" />

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="ICカード・IC付携帯"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="25"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginQR"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:orientation="horizontal" >

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />

				<ImageView
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="180"
					android:background="@drawable/ic_middle_qr"
					android:scaleType="fitCenter" />

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="アプリのＱＲコード"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="25"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginPW"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<ImageView
				android:layout_width="180dip"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:background="@drawable/ic_middle_idpass"
				android:scaleType="fitCenter"
				android:layout_gravity="center" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="ＩＤ／パスワードを入力"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="220" />
</LinearLayout>