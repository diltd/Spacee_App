<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="60dp"
	android:background="@color/white"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/kind"
		android:layout_width="0dip"
		android:layout_weight="5"
		android:layout_height="match_parent"
		android:visibility="invisible" />

	<ImageView
		android:id="@+id/icon"
		android:layout_width="0dip"
		android:layout_weight="60"
		android:layout_height="match_parent"
		android:layout_margin="10dp"
		android:background="@drawable/img_area" />

	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="275"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/upperText"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_payment_list_payment"
			android:textColor="@color/sub"
			android:textSize="16sp"
			android:gravity="center_vertical" />

		<TextView
			android:id="@+id/lowerText"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_payment_list_pay_psn"
			android:textColor="@color/text_black"
			android:textSize="16sp"
			android:gravity="center_vertical" />
	</LinearLayout>

	<ImageView
		android:id="@+id/markCheck"
		android:layout_width="0dip"
		android:layout_weight="50"
		android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp" />
</LinearLayout>