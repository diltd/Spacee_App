<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="120dp"
	android:background="@color/light_grey_white"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/kind"
		android:layout_width="0dip"
		android:layout_weight="20"
		android:layout_height="match_parent"
		android:visibility="invisible" />

	<ImageView
		android:id="@+id/icon"
		android:layout_width="0dip"
		android:layout_weight="100"
		android:layout_height="match_parent"
		android:layout_margin="10dp"
		android:background="@drawable/img_area" />

	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="280"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/upperText"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_payment_list_payment"
			android:textColor="@color/sub"
			android:textSize="18sp"
			android:gravity="center_vertical" />

		<TextView
			android:id="@+id/lowerText"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="30"
			android:text="@string/xml_payment_list_pay_psn"
			android:textColor="@color/text_black"
			android:textSize="18sp"
			android:gravity="center_vertical" />
	</LinearLayout>
</LinearLayout>