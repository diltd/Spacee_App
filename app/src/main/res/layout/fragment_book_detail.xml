<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentBookDetail"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/light_grey_white"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="120"
			android:orientation="horizontal" >

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/status1"
				android:layout_width="0dip"
				android:layout_weight="120"
				android:layout_height="35dip"
				android:text="@string/xml_book_detail_space_avail"
				android:textColor="@color/text_white"
				android:textSize="18sp"
				android:gravity="center"
				android:background="@xml/shape_oval2" />

			<View
				android:layout_width="0dip"
				android:layout_weight="20"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/status2"
				android:layout_width="0dip"
				android:layout_weight="725"
				android:layout_height="match_parent"
				android:text="@string/xml_book_detail_msg"
				android:textColor="@color/spacee_blue"
				android:textSize="24sp"
				android:paddingLeft="10sp"
				android:gravity="center_vertical" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="295"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="25" />

				<LinearLayout
					android:id="@+id/btnFloorGuide"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="70"
					android:background="@xml/shape_button_white"
					android:orientation="horizontal" >

					<View
						android:layout_width="0dip"
						android:layout_weight="29"
						android:layout_height="match_parent" />

					<LinearLayout
						android:layout_width="0dip"
						android:layout_weight="36"
						android:layout_height="match_parent"
						android:orientation="vertical" >

						<View
							android:layout_width="match_parent"
							android:layout_height="0dip"
							android:layout_weight="17" />

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="0dip"
							android:layout_weight="36"
							android:background="@drawable/ic_pin_red"
							android:layout_gravity="center"
							android:scaleType="center" />

						<View
							android:layout_width="match_parent"
							android:layout_height="0dip"
							android:layout_weight="17" />
					</LinearLayout>

					<TextView
						android:layout_width="0dip"
						android:layout_weight="230"
						android:layout_height="match_parent"
						android:text="@string/xml_book_detail_btn_floor_guide"
						android:textColor="@color/text_black"
						android:textSize="18sp"
						android:gravity="center_vertical" />
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="25" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="40" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="390"
			android:orientation="horizontal" >

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="580"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="35"
					android:text="@string/xml_book_detail_space_name"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/spaceName"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="65"
					android:text=""
					android:textColor="@color/text_black"
					android:textSize="36sp"
					android:gravity="center_vertical" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="20" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="40"
					android:orientation="horizontal" >

					<TextView
						android:layout_width="0dip"
						android:layout_weight="290"
						android:layout_height="match_parent"
						android:text="@string/xml_book_detail_checkin"
						android:textColor="@color/spacee_blue"
						android:textSize="20sp" />

					<TextView
						android:layout_width="0dip"
						android:layout_weight="290"
						android:layout_height="match_parent"
						android:text="@string/xml_book_detail_checkout"
						android:textColor="@color/spacee_blue"
						android:textSize="20sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/timeBegin"
						android:layout_width="0dip"
						android:layout_weight="150"
						android:layout_height="match_parent"
						android:text=""
						android:textColor="@color/text_black"
						android:textSize="40sp"
						android:gravity="center_horizontal|bottom" />

					<TextView
						android:layout_width="0dip"
						android:layout_weight="140"
						android:layout_height="match_parent"
						android:text="@string/xml_book_detail_from"
						android:textColor="@color/text_black"
						android:textSize="20sp"
						android:gravity="bottom" />

					<TextView
						android:id="@+id/timeEnd"
						android:layout_width="0dip"
						android:layout_weight="150"
						android:layout_height="match_parent"
						android:text=""
						android:textColor="@color/text_black"
						android:textSize="40sp"
						android:gravity="center_horizontal|bottom" />

					<TextView
						android:layout_width="0dip"
						android:layout_weight="140"
						android:layout_height="match_parent"
						android:text="@string/xml_book_detail_to"
						android:textColor="@color/text_black"
						android:textSize="20sp"
						android:gravity="bottom" />
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="20" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="35"
					android:text="@string/xml_book_detail_use"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<TextView
					android:id="@+id/usage"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="100"
					android:text="@string/xml_book_detail_use_sample"
					android:textColor="@color/text_black"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:maxLines="3" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="15" />
			</LinearLayout>

			<ImageView
				android:id="@+id/thumbnail"
				android:layout_width="0dip"
				android:layout_weight="500"
				android:layout_height="match_parent"
				android:background="@drawable/img_area" />

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="50" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="80"
			android:orientation="horizontal" >

			<View
				android:layout_width="0dip"
				android:layout_weight="185"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/btnLogout1"
				android:layout_width="0dip"
				android:layout_weight="565"
				android:layout_height="match_parent"
				android:text="@string/xml_book_detail_btn_check_space"
				android:textColor="@color/sub"
				android:textSize="18sp"
				android:gravity="center"
				android:background="@xml/shape_button_white" />

			<View
				android:layout_width="0dip"
				android:layout_weight="20"
				android:layout_height="match_parent" />

			<TextView
				android:id="@+id/btnLogout2"
				android:layout_width="0dip"
				android:layout_weight="450"
				android:layout_height="match_parent"
				android:text="@string/xml_book_detail_btn_gohome"
				android:textColor="@color/text_white"
				android:textSize="18sp"
				android:gravity="center"
				android:background="@drawable/shape_button_blue" />

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="60" />
	</LinearLayout>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>