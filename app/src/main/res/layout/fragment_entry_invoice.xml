<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentEntryInvoice"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="1500dip"
			android:minHeight="1110dip"
			android:background="@color/light_grey_white"
			android:orientation="horizontal">

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="700"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="84"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/kindCard"
						android:layout_width="0dip"
						android:layout_weight="240"
						android:layout_height="match_parent"
						android:text="クレジットカード"
						android:textColor="@color/sub"
						android:textSize="22sp"
						android:gravity="center" />

					<TextView
						android:layout_width="0dip"
						android:layout_weight="240"
						android:layout_height="match_parent"
						android:text="請求書支払い"
						android:textColor="@color/text_black"
						android:textSize="22sp"
						android:gravity="center" />

					<View
						android:layout_width="0dip"
						android:layout_weight="220"
						android:layout_height="match_parent" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="6"
					android:orientation="horizontal" >

					<View
						android:layout_width="0dip"
						android:layout_weight="240"
						android:layout_height="match_parent"
						android:background="@color/sub" />

					<View
						android:layout_width="0dip"
						android:layout_weight="240"
						android:layout_height="match_parent"
						android:background="@color/spacee_blue" />

					<View
						android:layout_width="0dip"
						android:layout_weight="220"
						android:layout_height="match_parent" />
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="会社名"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/companyName"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="株式会社Spacee"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:inputType="text"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="担当者名"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/staffName"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="山田太郎"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:inputType="text"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="郵便番号（ハイフン無し）"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/postCode"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="1500032"
					android:inputType="number"
					android:maxLength="7"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="住所（都道府県市区）"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/companyAddr1"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="東京都渋谷区"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:inputType="text"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="住所（以降）"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/companyAddr2"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="桜ケ丘20-12"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:inputType="text"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="30" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="60"
					android:text="電話番号(ハイフン無し)"
					android:textColor="@color/spacee_blue"
					android:textSize="20sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/companyPhone"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:hint="0312345678"
					android:inputType="number"
					android:maxLength="11"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="390" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="100"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="360"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="1030" />

				<TextView
					android:id="@+id/btnInputComp"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:text="利用規約の同意へ"
					android:textColor="@color/text_white"
					android:textSize="24sp"
					android:gravity="center"
					android:background="@drawable/shape_button_gray"
					android:clickable="false"
					android:enabled="false" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="390" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />
		</LinearLayout>
	</ScrollView>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>
