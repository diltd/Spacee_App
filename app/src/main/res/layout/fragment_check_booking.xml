<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentCheckBooking"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/light_grey_white"
	android:orientation="vertical">

	<View
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="50" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="110"
		android:text="@string/xml_check_booking_msg1"
		android:textSize="28sp"
		android:textColor="@color/spacee_blue"
		android:gravity="center" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="360"
		android:orientation="horizontal" >

		<View
			android:layout_width="0dip"
			android:layout_weight="95"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginIC"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:orientation="horizontal" >

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />

				<ImageView
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="180"
					android:background="@drawable/ic_middle_cardread"
					android:scaleType="fitCenter" />

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="@string/xml_check_booking_btn_login_ic"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="25"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginQR"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:orientation="horizontal" >

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />

				<ImageView
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="180"
					android:background="@drawable/ic_middle_qr"
					android:scaleType="fitCenter" />

				<View
					android:layout_width="0dip"
					android:layout_height="match_parent"
					android:layout_weight="95" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="@string/xml_check_booking_btn_login_qr"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="25"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnLoginPW"
			android:layout_width="0dip"
			android:layout_weight="370"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@xml/shape_large_button" >

			<View
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="60" />

			<ImageView
				android:layout_width="180dip"
				android:layout_height="0dip"
				android:layout_weight="180"
				android:background="@drawable/ic_middle_idpass"
				android:scaleType="fitCenter"
				android:layout_gravity="center" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dip"
				android:layout_weight="120"
				android:text="@string/xml_check_booking_btn_login_pw"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="80" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="80"
		android:orientation="horizontal" >

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />

		<TextView
			android:layout_width="0dip"
			android:layout_weight="470"
			android:layout_height="match_parent"
			android:text="@string/xml_check_booking_msg2"
			android:textColor="@color/text_black"
			android:textSize="18sp"
			android:maxLines="2"
			android:gravity="center_vertical" />

		<LinearLayout
			android:id="@+id/btnRegByApp"
			android:layout_width="0dip"
			android:layout_weight="330"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:background="@xml/shape_button_white" >

			<View
				android:layout_width="0dip"
				android:layout_weight="34"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="36"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="22" />

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="36"
					android:background="@drawable/ic_phone"
					android:scaleType="center"
					android:layout_gravity="center" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="22" />
			</LinearLayout>

			<TextView
				android:layout_width="0dip"
				android:layout_weight="260"
				android:layout_height="match_parent"
				android:text="@string/xml_check_booking_btn_reg_by_app"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center_vertical"
				android:paddingLeft="10sp" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="30"
			android:layout_height="match_parent" />

		<LinearLayout
			android:id="@+id/btnRegByInput"
			android:layout_width="0dip"
			android:layout_weight="330"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:background="@xml/shape_button_white" >

			<View
				android:layout_width="0dip"
				android:layout_weight="30"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="50"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="22" />

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="36"
					android:background="@drawable/ic_tablet"
					android:scaleType="center"
					android:layout_gravity="center" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="22" />
			</LinearLayout>

			<TextView
				android:layout_width="0dip"
				android:layout_weight="250"
				android:layout_height="match_parent"
				android:text="@string/xml_check_booking_btn_reg_input"
				android:textColor="@color/text_black"
				android:textSize="18sp"
				android:gravity="center_vertical"
				android:paddingLeft="10sp" />
		</LinearLayout>

		<View
			android:layout_width="0dip"
			android:layout_weight="60"
			android:layout_height="match_parent" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="60" />
</LinearLayout>