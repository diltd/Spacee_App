<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fragmentEntryInput"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="1000dip"
			android:minHeight="740dip"
			android:background="@color/light_grey_white"
			android:orientation="horizontal">

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="700"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="40" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="70"
					android:text="名前"
					android:textColor="@color/spacee_blue"
					android:textSize="22sp"
					android:gravity="center_vertical" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:orientation="horizontal" >

					<EditText
						android:id="@+id/nameFamily"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="340"
						android:hint="氏"
						android:textColor="@color/text_black"
						android:textSize="30sp"
						android:inputType="text"
						android:maxLines="1"
						android:gravity="center_vertical"
						android:background="@xml/shape_edit_idpw" />

					<View
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="20" />

					<EditText
						android:id="@+id/nameGiven"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="340"
						android:hint="名"
						android:textColor="@color/text_black"
						android:textSize="30sp"
						android:inputType="text"
						android:maxLines="1"
						android:gravity="center_vertical"
						android:background="@xml/shape_edit_idpw" />
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="20" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="70"
					android:text="メールアドレス"
					android:textColor="@color/spacee_blue"
					android:textSize="22sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/mailAddress"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:inputType="textEmailAddress"
					android:hint="hogehoge@mail.com"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:text="携帯メールアドレスの場合はspacee.jpを受信許可してください。\n後ほど、登録確認のメールを送信致します。\nお間違えのないようにお願い致します。"
					android:textColor="@color/sub"
					android:textSize="16sp"
					android:gravity="center_vertical"
					android:maxLines="3" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="70"
					android:text="パスワード"
					android:textColor="@color/spacee_blue"
					android:textSize="22sp"
					android:gravity="center_vertical" />

				<EditText
					android:id="@+id/password"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:inputType="textPassword"
					android:textColor="@color/text_black"
					android:textSize="30sp"
					android:maxLines="1"
					android:gravity="center_vertical"
					android:background="@xml/shape_edit_idpw" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:orientation="horizontal" >

					<ImageView
						android:layout_width="0dip"
						android:layout_weight="36"
						android:layout_height="36dip"
						android:background="@drawable/ic_attention_red"
						android:layout_gravity="center" />

					<TextView
						android:layout_width="0dip"
						android:layout_weight="664"
						android:layout_height="match_parent"
						android:text="パスワードは半角英数8文字以上で入力してください"
						android:textColor="@color/alert"
						android:textSize="18sp"
						android:paddingLeft="10sp"
						android:gravity="center_vertical" />
				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="330" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="100"
				android:layout_height="match_parent" />

			<LinearLayout
				android:layout_width="0dip"
				android:layout_weight="360"
				android:layout_height="match_parent"
				android:orientation="vertical" >

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="510" />

				<TextView
					android:id="@+id/btnInputComp"
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="80"
					android:text="支払い情報の入力へ"
					android:textColor="@color/text_white"
					android:textSize="22sp"
					android:gravity="center"
					android:background="@drawable/shape_button_gray"
					android:clickable="false"
					android:enabled="false" />

				<View
					android:layout_width="match_parent"
					android:layout_height="0dip"
					android:layout_weight="410" />
			</LinearLayout>

			<View
				android:layout_width="0dip"
				android:layout_weight="60"
				android:layout_height="match_parent" />
		</LinearLayout>
	</ScrollView>

	<include
		android:id="@+id/errorMessagePanel"
		layout="@layout/layout_error_message" />
</FrameLayout>
